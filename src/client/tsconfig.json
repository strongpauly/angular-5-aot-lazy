{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,  
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "./**/*.ts",
    "../../node_modules/@types"
  ],
  "angularCompilerOptions": {
    "genDir": "../../build/client/aot",
    "skipMetadataEmit" : true
  }
}
